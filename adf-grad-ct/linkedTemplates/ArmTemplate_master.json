{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-grad-ct"
		},
		"AzureDLSdestination_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDLSdestination'"
		},
		"AzureDataLakeStoragedestination_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDataLakeStoragedestination'"
		},
		"AzureDataLakeStoragetarget_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'AzureDataLakeStoragetarget'"
		},
		"AzureSqlDatabasesource_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabasesource'"
		},
		"ls_sqldb_adventureworks_lt_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ls_sqldb_adventureworks_lt'"
		},
		"AzureDLSdestination_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://adlg2gradct.dfs.core.windows.net"
		},
		"AzureDataLakeStoragedestination_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://adlg2gradct.dfs.core.windows.net"
		},
		"AzureDataLakeStoragetarget_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://adlg2gradct.dfs.core.windows.net"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-grad-ct_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureDLSdestination_accountKey": {
						"value": "[parameters('AzureDLSdestination_accountKey')]"
					},
					"AzureDataLakeStoragedestination_accountKey": {
						"value": "[parameters('AzureDataLakeStoragedestination_accountKey')]"
					},
					"AzureDataLakeStoragetarget_accountKey": {
						"value": "[parameters('AzureDataLakeStoragetarget_accountKey')]"
					},
					"AzureSqlDatabasesource_connectionString": {
						"value": "[parameters('AzureSqlDatabasesource_connectionString')]"
					},
					"ls_sqldb_adventureworks_lt_connectionString": {
						"value": "[parameters('ls_sqldb_adventureworks_lt_connectionString')]"
					},
					"AzureDLSdestination_properties_typeProperties_url": {
						"value": "[parameters('AzureDLSdestination_properties_typeProperties_url')]"
					},
					"AzureDataLakeStoragedestination_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStoragedestination_properties_typeProperties_url')]"
					},
					"AzureDataLakeStoragetarget_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStoragetarget_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}